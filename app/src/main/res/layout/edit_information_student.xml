<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/no_face" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/studentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Vương Nhất Bác"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/MSSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="123456"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/gioiTinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nam"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/noiSinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hà Nam"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/ngaySinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="05/08/1997"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0135465887"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/soCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2323232323"
        android:textColor="@color/blue_dark"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/monHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phát triển ứng dụng di động"
        android:enabled="false"
        android:paddingLeft="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoát"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_button_2"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Lưu"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_button"/>
    </LinearLayout>

</LinearLayout>